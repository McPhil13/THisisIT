<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mcphil.avastus.MainActivity"
    android:background="@drawable/gradient_bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/profile_w_h"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="38dp"
        android:background="@color/input_login_hint"
        app:layout_constraintBottom_toTopOf="@+id/TVFullName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Trixie Mae Mengorio"
        android:textColor="@color/white"
        android:textSize="@dimen/dpname_w_h"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/DPGradeLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/DPGradeLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/gradelevel"
        android:textColor="@color/input_login"
        android:textSize="@dimen/dpname_w_h"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/DPSchool"
        app:layout_constraintEnd_toEndOf="@+id/DPSchool"
        app:layout_constraintStart_toStartOf="@+id/DPSchool"
        app:layout_constraintTop_toBottomOf="@+id/TVFullName" />

    <TextView
        android:id="@+id/DPSchool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/school"
        android:textColor="@color/input_login"
        android:textSize="@dimen/dpname_w_h"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnLibrary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DPGradeLevel" />

    <Button
        android:id="@+id/btnLibrary"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:gravity="center"
        android:text="@string/librarybtn"
        app:layout_constraintBottom_toTopOf="@+id/btnProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DPSchool" />

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:gravity="center"
        android:text="@string/profilebtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLibrary" />


</android.support.constraint.ConstraintLayout>


